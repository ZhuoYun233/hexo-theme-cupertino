<article class="post">
    <div class="meta">
        <h2 class="title">
            <%= page.title %>
            <div class="divider"></div>
            <div class="content">
                <%- page.content %>
             </div>
        </h2>
    </div>
    <div class="content">
        
        <div class="post-list">
            <% site.posts.each(function (post) { %>
                <% if (Object.values(post.categories.data[0])[0] === 'meditation') { %>
                    <article class="post-list-item">
                        <a href="<%- url_for(post.path) %>">
                            <% if (post.cover_image) { %>
                            <div class="cover-img">
                                <img src="<%= post.cover_image %>" alt="<%= post.cover_image_alt %>">
                            </div>
                            <% } %>   
                            <div class="content">
                                <div class="title">
                                    <%= post.title %>
                                </div>
                                <% if (theme.show_excerpt) { %>
                                <div class="excerpt">
                                    <%- post.excerpt %>
                                </div>
                                <% } %>
                                <div class="time">
                                    <% if (post.date.month() == 0) { %>
                                    <span>January</span>
                                    <% } %>
                                    <% if (post.date.month() == 1) { %>
                                    <span>February</span>
                                    <% } %>
                                    <% if (post.date.month() == 2) { %>
                                    <span>March</span>
                                    <% } %>
                                    <% if (post.date.month() == 3) { %>
                                    <span>April</span>
                                    <% } %>
                                    <% if (post.date.month() == 4) { %>
                                    <span>May</span>
                                    <% } %>
                                    <% if (post.date.month() == 5) { %>
                                    <span>June</span>
                                    <% } %>
                                    <% if (post.date.month() == 6) { %>
                                    <span>July</span>
                                    <% } %>
                                    <% if (post.date.month() == 7) { %>
                                    <span>August</span>
                                    <% } %>
                                    <% if (post.date.month() == 8) { %>
                                    <span>September</span>
                                    <% } %>
                                    <% if (post.date.month() == 9) { %>
                                    <span>October</span>
                                    <% } %>
                                    <% if (post.date.month() == 10) { %>
                                    <span>November</span>
                                    <% } %>
                                    <% if (post.date.month() == 11) { %>
                                    <span>December</span>
                                    <% } %>
                                    <span>&nbsp;<%- post.date.date() %>,&nbsp;</span>
                                    <span><%- post.date.year() %></span>
                                </div>
                            </div>
                        </a>
                    </article>
                <% } %>
            <% }) %>
        </div>
    </div>

<% if (!page.no_about) { %>
    <div class="about">
        <h1><%= __('about_this_post') %></h1>
        <p><%- __('this_post_is_written_by', config.author) %>.</p>
    </div>
<% } %>
</article>